{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES6",
		"sourceRoot": "src",
		"outDir": "build",
		"esModuleInterop": true,
		"sourceMap": true,
		"inlineSourceMap": false,
		"declaration": true,

		"strict": true,
		"forceConsistentCasingInFileNames": true,

		"noImplicitReturns": true,
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"suppressImplicitAnyIndexErrors": true,
		"downlevelIteration": true
	},
	"include": [
		"src/**/*.ts"
	]
}